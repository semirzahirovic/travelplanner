<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.semirzahirovic.travelplanner">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:name=".TravelPlannerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <uses-library android:name="android.test.runner" />

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:icon="@drawable/menu"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".LoginActivity"
            android:configChanges="orientation"
            android:label="@string/login_activity"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>
        <activity
            android:name=".SignupActivity"
            android:configChanges="orientation"
            android:label="@string/create_profile"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".TripFormActivity"
            android:configChanges="orientation"
            android:label="@string/trip_form"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AdminActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".UserProfileActivity"
            android:configChanges="orientation"
            android:label="@string/user_profile" />
    </application>
</manifest>
